<div class="mt-3">
    <form method="POST" action="/news/create" enctype="multipart/form-data">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-12 mb-3">
                <label for="title" class="form-label">Tiêu đề bài viết</label>
                <input type="text" class="form-control" x-models="this.open" id="title" name="title">
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-sm-12 col-md-12 mb-3">
                <label for="description" class="form-label">Mô tả bài viết</label>
                <input type="textarea" class="form-control" id="description" name="description">
            </div>
        </div>
        
        <div class="row">
            <div class="col-6 col-sm-6 col-md-6 mb-3">
                <label for="image" class="form-label">Hình ảnh</label>
                <input type="file" class="form-control" id="image" name="description">
            </div>
            <div class="col-6 col-sm-6 col-md-6 mb-3">
                <label for="url" class="form-label">Đường dẫn bài viết</label>
                <input type="texr" class="form-control" id="url" name="description">
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Thêm</button>
    </form>
</div>